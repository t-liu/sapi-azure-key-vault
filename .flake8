[flake8]
max-line-length = 127
exclude = 
    .git,
    __pycache__,
    .venv,
    venv,
    .pytest_cache,
    htmlcov,
    *.egg-info,
    .github

# Error codes to ignore:
# E203: whitespace before ':'
# E501: line too long (handled by black)
# W503: line break before binary operator
# W504: line break after binary operator
ignore = E203,E501,W503,W504

per-file-ignores =
    __init__.py:F401
    tests/*:F401,F541

max-complexity = 10

